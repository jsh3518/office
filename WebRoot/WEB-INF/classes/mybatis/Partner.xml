<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.office.mapper.PartnerMapper">
	<sql id="partnerColumns">username,password,appid,resource,valid</sql>

	
	<resultMap type="Partner" id="partnerResultMap">
		<id column="id" property="id"/>
		<result column="username" property="username"/>
		<result column="password" property="password"/>
		<result column="appid" property="appid"/>
		<result column="resource" property="resource"/>
		<result column="valid" property="valid"/>
	</resultMap>
	
	<select id="getPartner" resultMap="partnerResultMap">
		select id,<include refid="partnerColumns"/>
		 from partner
		 where 1=1
		<if test="id!=null">
			and id = #{id}
		</if>
		<if test="appid!=null and appid!=''">
			and appid = #{appid}
		</if>
		<if test="resource!=null and resource!=''">
			and resource = #{resource}
		</if>
		<if test="valid!=null and valid!=''">
			and valid = #{valid}
		</if>
	</select>
	
	<insert id="insertPartner" parameterType="Partner">
		insert partner (<include refid="partnerColumns"/>) values (#{username},#{password},#{appid},#{resource},#{valid})
	</insert>
	
	<update id="updatePartner" parameterType="Partner">
		update partner set id =#{id}
		<if test="password!=null and password!=''">
			, password = #{password}
		</if>
		<if test="appid!=null and appid!=''">
			, appid = #{appid}
		</if>
		<if test="resource!=null and resource!=''">
			, resource = #{resource}
		</if>
		<if test="valid!=null and valid!=''">
			, valid = #{valid}
		</if>
		where id =#{id}
	</update>
</mapper>